{
    "name": "@uni-status/email",
    "version": "0.1.1",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./templates/*": {
            "types": "./src/templates/*.tsx",
            "default": "./src/templates/*.tsx"
        }
    },
    "scripts": {
        "dev": "email dev --dir ./src/templates",
        "build": "email export --dir ./src/templates --outDir ./dist",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@react-email/components": "^1.0.6",
        "@uni-status/shared": "workspace:*",
        "nodemailer": "^7.0.13",
        "react-email": "^5.1.1",
        "resend": "^6.9.1"
    },
    "devDependencies": {
        "@react-email/preview-server": "^5.2.8",
        "@types/nodemailer": "^7.0.9",
        "@types/react": "^19.2.13",
        "react": "^19.2.4",
        "typescript": "^5.7.3"
    },
    "peerDependencies": {
        "react": "^19"
    }
}
