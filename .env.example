# MONITORING
UNI_STATUS_CHECK_TIMEOUT_MS=30000
UNI_STATUS_MONITOR_DEFAULT_INTERVAL=60
UNI_STATUS_MONITOR_DEFAULT_REGION=uk
UNI_STATUS_PROBE_IMAGE=unifiedprojects/uni-status-probe:latest

# FEATURES
UNI_STATUS_ENABLE_AUDIT_LOGS=true
UNI_STATUS_ENABLE_MULTI_REGION=false

# RETENTION
UNI_STATUS_RETENTION_CHECK_RESULTS_DAYS=45
UNI_STATUS_RETENTION_AUDIT_LOGS_DAYS=365

# INTERNAL
UNI_STATUS_API_PORT=3001

# RATE LIMITING
UNI_STATUS_DISABLE_RATE_LIMITS=false

# =============================================================================
# LICENSING (Enterprise Features)
# =============================================================================

# -----------------------------------------------------------------------------
# Self-Hosted Enterprise License Key
# -----------------------------------------------------------------------------
# For self-hosted deployments, paste your enterprise license key here to unlock
# enterprise features (SSO, audit logs, custom roles, etc.).
#
# Without a license, self-hosted mode still provides unlimited monitors, status
# pages, and team members - just without enterprise features.
#
# Purchase a license at: https://status.unified.sh/pricing
# You can also activate via the UI at Settings > License.
UNI_STATUS_LICENCE=

# =============================================================================
# HOSTED MODE ONLY - Keygen.sh Configuration
# =============================================================================
# These settings are ONLY needed if you're running your own hosted/SaaS version
# of Uni-Status and want to sell your own licenses.
#
# Self-hosted deployments can IGNORE these - the Keygen account is hardcoded
# to Unified Projects so users can purchase licenses from the official store.
# =============================================================================

# Keygen.sh Account ID (your own Keygen account for selling licenses)
# UNI_STATUS_KEYGEN_ACCOUNT_ID=

# Keygen.sh API URL (default: https://api.keygen.sh)
# UNI_STATUS_KEYGEN_API_URL=https://api.keygen.sh

# Admin API token for creating/managing licenses
# UNI_STATUS_KEYGEN_API_TOKEN=

# Webhook secret for verifying Keygen webhooks
# UNI_STATUS_KEYGEN_WEBHOOK_SECRET=

# Public key for license verification (RSA 2048-bit or Ed25519, base64 encoded)
# UNI_STATUS_KEYGEN_PUBLIC_KEY=

# Product ID in Keygen.sh
# UNI_STATUS_KEYGEN_PRODUCT_ID=

# Note: Policy IDs are hardcoded in @uni-status/licensing and cannot be modified

# =============================================================================
# LANDING PAGE / LICENSE PORTAL INTEGRATION
# =============================================================================
# The landing portal (https://status.unified.sh) handles Stripe payments and
# license management. This is a closed-source service operated by Unified Projects.
#
# Note: The portal URL is hardcoded to https://status.unified.sh and cannot be changed.
# =============================================================================

# Internal API key for fetching billing data from landing portal
# This key is only needed for hosted deployments and must match
# LANDING_INTERNAL_API_KEY in the landing portal config
# LANDING_INTERNAL_API_KEY=your-internal-api-key-here
